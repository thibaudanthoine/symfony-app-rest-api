<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8"/>
        <title>{% block title %}Sample Symfony App{% endblock %}</title>
        
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset(assetsPath~'/css/style.css') }}"/>
        <link rel="stylesheet" href="{{ asset(assetsPath~'/vendor/bootstrap/dist/css/bootstrap.css') }}"/>
        <link rel="stylesheet" href="{{ asset(assetsPath~'/vendor/alertify/themes/alertify.core.css') }}"/>
        <link rel="stylesheet" href="{{ asset(assetsPath~'/vendor/alertify/themes/alertify.bootstrap.css') }}"/>
        {% endblock %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    </head>
    
    <body>
        {% block body %}{% endblock %}
    </body>

    {% block requirejs %}
        {{ include('::requirejs.html.twig', { module: false }) }}
    {% endblock %}

</html>